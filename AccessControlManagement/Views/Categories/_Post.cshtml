@model IEnumerable<object>
@{
    List<AccessControlManagement.Models.user> listUsers = Model.ToList()[0] as List<AccessControlManagement.Models.user>;  
}

<div class="container">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#all-user-tab">View All User</a></li>
        <li><a data-toggle="tab" href="#created-post-tab">User Created Post</a></li>
    </ul>

    <div class="tab-content">
        <div id="all-user-tab" class="tab-pane fade in active">
            <div class="row" style="margin-top:10px" id="setting-table-post">
                <table class="table table-hover" style="border:2px solid black; margin-top:50px">
                    <tr style="border:2px solid black; background-color:#DADBDE">
                        <th style="border-right:2px solid black; text-align:center">Full Name</th>
                        <th style="border-right:2px solid black; text-align:center">User Name</th>
                        <th style="border-right:2px solid black; text-align:center">Role</th>
                        <th style="border-right:2px solid black; text-align:center">Email</th>
                        @*<th style="border-right:2px solid black; text-align:center">No. of Posts</th>*@
                    </tr>

                    @foreach (var item in listUsers)
                    {
                        <tr>
                            <td>@item.fullname</td>
                            <td>@item.username</td>
                            <td>@item.role</td>
                            <td>@item.email_id</td>
                            @*<td>@item.postCount</td>*@
                        </tr>
                    }
                </table>
            </div>

        </div>
        <div id="created-post-tab" class="tab-pane fade">
            
        </div>        
    </div>
</div>

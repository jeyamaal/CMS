                            <h2>Please Sign Up <small>It's free and always will be.</small></h2>
                            <hr class="colorgraph">
                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    <div class="form-group">

                                        @Html.TextBoxFor(model => model.fullname, new { @required = "true", @class = "form-control input-lg", @placeholder = "First name", @tabindex = "1", @autocomplete = "off" })

                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="text" name="last_name" id="last_name" class="form-control input-lg" placeholder="Last Name" tabindex="2" autocomplete="off">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.username, new { @required = "true", @class = "form-control input-lg", @placeholder = "User name", @tabindex = "3", @autocomplete = "off" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.email_id, new { @required = "true", @class = "form-control input-lg", @placeholder = "Email", @tabindex = "4", @autocomplete = "off" })
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        @Html.PasswordFor(model => model.password, new { @required = "true", @class = "form-control input-lg", @placeholder = "Password", @tabindex = "5", @autocomplete = "off" })
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @required = "true", @class = "form-control input-lg", @placeholder = "Confirm Password", @tabindex = "6", @autocomplete = "off" })

                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    <div class="form-group">
                                      @Html.DropDownListFor(model => model.role, listItems, "-- Select Status --")

                                    </div>
                                </div>

                             

                            </div>
                            <div class="row">
